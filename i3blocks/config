# Global properties
separator=true
separator_block_width=15

[memory]
command=echo "$(free -m | grep Mem | awk '{print $3}')/$(free -m | grep Mem | awk '{print $2}') MiB"
interval=1

[battery]
SCRIPT_PATH=/home/wafelack/.config/i3blocks/battery.sh
command=$SCRIPT_PATH
interval=45

[time]
command=echo "$(date +'%H:%M')"
interval=repeat

[layout]
command=echo $(echo $(setxkbmap -query | grep layout) | sed "s/layout://")
interval=repeat

[delimiter]
full_text=""
