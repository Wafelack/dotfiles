set PATH /sbin/ $PATH
set PATH /usr/local/texlive/2021/bin/x86_64-linux $PATH

function git_branch
  set -l is_git (git rev-parse --is-inside-work-tree 2> /dev/null)

  switch $is_git
    case 'true'
	    echo -n (set_color red)(git branch --show-current)(set_color normal)
  end
end

function fish_prompt
  set saved_status $status
  set prev_status
  if test $saved_status -ne 0
    set prev_status (set_color red)$saved_status(set_color normal)
  end
  echo -n $prev_status (prompt_pwd) (git_branch) "% " 
end
set PATH /usr//bin $PATH
export ORION_LIB=/usr//lib//orion
set PATH /usr//bin $PATH
export ORION_LIB=/usr//lib//orion
