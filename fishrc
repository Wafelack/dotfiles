function git_branch
  set -l is_git (git rev-parse --is-inside-work-tree 2> /dev/null)

  switch $is_git
    case 'true'
	    echo -n (set_color red)(git branch --show-current)(set_color normal)
  end
end

function fish_prompt
  echo -n "["(git_branch)"]" (prompt_pwd) "\$ " 
end

# Auto dotfiles linker
sed '/^#/d' ~/.config/.dotfiles/dotfiles.rdfm | sed -r '/^\s*$/d' | awk -F'=' '{ print $1 }' | rlgl -qs rdfm link
